<div class="col-xs-12">
  <h1>You are now chatting with <%= @match.name.titleize %></h1>
  <div class="row">
    <div class="logo-pic col-xs-5">
      <img src="<%= @user.image %>">
    </div>
    <div class="col-xs-2"></div>
    <div class="logo-pic col-xs-5">
      <img src="<%= @match.image %>">
    </div>
  </div>
  <div class="chat-box row">

  </div>
</div>
<div class="message-send-box">
  <form action="/messages" method="post">
    <div class="input-group">
      <input type="text" class="form-control" name="new-message">
      <span class="input-group-addon">Send</span>
    </div>
  </form>
</div>

<%= javascript_tag do %>
  renderMessages("<%= j(@chatroom.id) %>");
<% end %>
